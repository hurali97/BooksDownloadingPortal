
@model BooksDownloadingPortal.Models.SeatNumbers
@{
    ViewBag.Title = "NewSeatNumber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Seat Number</h2>


@using (Html.BeginForm("Save", "SeatNumbers",new {Id="newSeatNumber"}))
{
    <div class="form-group">
        @Html.LabelFor(m => m.SeatNumber)
        @Html.TextBoxFor(m => m.SeatNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SeatNumber)
    </div>

  
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}

